# TrueNAS API Configuration Example
# Copy this file to group_vars/truenas.yml and customize for your environment

# TrueNAS API Configuration
# Replace with your actual TrueNAS IP address or hostname
ansible_host: "10.0.2.10"

# API Key Configuration
# Generate an API key in TrueNAS Web UI: System > API Keys
# Export as environment variable: export TRUENAS_API_KEY="your-api-key-here"
# The roles will automatically use: lookup('env', 'TRUENAS_API_KEY')

# SSL Certificate Validation
# Set to false if using self-signed certificates (not recommended for production)
truenas_validate_certs: false

# Override default ZFS pool name if needed
# zfs_pool: tank

# Example environment variable setup:
# export TRUENAS_API_KEY="1-AbCdEfGhIjKlMnOpQrStUvWxYz1234567890AbCdEfGhIjKlMnOpQrStUvWxYz"
#
# Or add to your shell profile (~/.zshrc, ~/.bashrc):
# echo 'export TRUENAS_API_KEY="your-api-key-here"' >> ~/.zshrc